# Arc Blockchain Configuration
NEXT_PUBLIC_CHAIN_ID=5042002
NEXT_PUBLIC_RPC_URL=https://rpc.testnet.arc.network
NEXT_PUBLIC_WS_URL=wss://rpc.testnet.arc.network

# Contract Addresses (deployed on Arc Testnet)
# Replace these with your deployed contract addresses after deployment
NEXT_PUBLIC_MARKETPLACE_ADDRESS=0x0000000000000000000000000000000000000000
NEXT_PUBLIC_USDC_ADDRESS=0x0000000000000000000000000000000000000000

# GraphQL/Subgraph Endpoint
NEXT_PUBLIC_GRAPHQL_ENDPOINT=http://localhost:8000/subgraphs/name/arcmarket

# Block Explorer
NEXT_PUBLIC_BLOCK_EXPLORER=https://testnet.arcscan.app

# Optional: WalletConnect Project ID (if using WalletConnect)
NEXT_PUBLIC_WALLETCONNECT_PROJECT_ID=

# Circle User-Controlled Wallets Configuration
# Get your API key from https://console.circle.com/api-keys
# IMPORTANT: This is a server-side secret - NEVER expose it to the client
CIRCLE_API_KEY=

# NextAuth Configuration
# Required for social login (Google, Facebook, Apple)
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=  # Generate with: openssl rand -base64 32

# Google OAuth (get from https://console.cloud.google.com/)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# Facebook OAuth (get from https://developers.facebook.com/)
FACEBOOK_CLIENT_ID=
FACEBOOK_CLIENT_SECRET=

# Apple OAuth (get from https://developer.apple.com/)
APPLE_CLIENT_ID=
APPLE_CLIENT_SECRET=

# Optional: Analytics
NEXT_PUBLIC_GA_MEASUREMENT_ID=
