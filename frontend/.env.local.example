# Copy this file to .env.local and fill in your values

# Circle Wallets API Key (SECRET - Backend only)
# Get from: https://console.circle.com/
CIRCLE_API_KEY=TEST_API_KEY:your_api_key_here

# Circle App ID (Public - Frontend)
NEXT_PUBLIC_CIRCLE_APP_ID=your_app_id_here

# NextAuth Configuration
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=generate_a_random_secret_here_use_openssl_rand_base64_32

# OAuth Providers (Get from respective developer consoles)
# Google OAuth: https://console.cloud.google.com/
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here

# Facebook OAuth: https://developers.facebook.com/
FACEBOOK_CLIENT_ID=your_facebook_app_id_here
FACEBOOK_CLIENT_SECRET=your_facebook_app_secret_here

# Apple OAuth: https://developer.apple.com/
APPLE_CLIENT_ID=your_apple_service_id_here
APPLE_CLIENT_SECRET=your_apple_client_secret_here

# Arc Blockchain Configuration
NEXT_PUBLIC_CHAIN_ID=5042002
NEXT_PUBLIC_RPC_URL=https://rpc.testnet.arc.network
NEXT_PUBLIC_WS_URL=wss://rpc.testnet.arc.network

# Contract Addresses (after deployment)
NEXT_PUBLIC_MARKETPLACE_ADDRESS=0x0000000000000000000000000000000000000000
NEXT_PUBLIC_USDC_ADDRESS=0x0000000000000000000000000000000000000000

# GraphQL Endpoint
NEXT_PUBLIC_GRAPHQL_ENDPOINT=http://localhost:8000/subgraphs/name/arcmarket

# Block Explorer
NEXT_PUBLIC_BLOCK_EXPLORER=https://testnet.arcscan.app
